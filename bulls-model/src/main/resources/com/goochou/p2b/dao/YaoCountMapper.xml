    <select id="selectTotalIncome" parameterType="int" resultType="double">
    SELECT
    IFNULL(( IFNULL(r.regularAmount,0) + IFNULL(h.huoAmount,0)+ IFNULL(s.signAmount,0)),0) totalAmount
    FROM
    (
    SELECT
    sum(i.interest_amount) huoAmount
    FROM
    interest i,user u
    WHERE
    i.user_id=u.id
    and u.status  = 0
    and u.id=#{userId}
    and i.date &lt; DATE_SUB(CURDATE(),INTERVAL #{type} day)
    AND has_dividended = 1
    ) h,
    (
    SELECT
    sum(ie.interest_amount) regularAmount
    FROM
    interest ie
    LEFT JOIN investment ment ON ment.id = ie.investment_id
    LEFT JOIN user us ON us.id = ment.user_id
    WHERE
    ie.user_id IS NULL
    AND us. STATUS != 3
    and us.id=#{userId}
    and ie.date &lt; DATE_SUB(CURDATE(),INTERVAL #{type} day)
    AND ie.has_dividended = 1
    ) r,(
    select SUM(t.amount) signAmount from trade_record t where t.user_id=#{userId} and t.type=11 and t.time &lt; DATE_SUB(CURDATE(),INTERVAL #{type} day)
    )s
  </select>

