  <select id="getUserInviteDetailWithInviteId" resultType="map" parameterType="map">
  	SELECT 
		uid.*,
		ui.user_id AS inviteUserId,
		u.true_name as invitedUserName,
		u2.phone as invitePhone
	FROM user_invite_detail uid
	LEFT JOIN user_invite ui 
	ON uid.ui_id=ui.id
	LEFT JOIN user u
	ON ui.invite_user_id=u.id
	LEFT JOIN user u2
	on ui.user_id = u2.id
	where 1=1
	and uid.status = 0 and ui.user_id not in (
		select b.id from `user` b join user_admin c on b.phone=c.phone and b.id in (
		select user_id from wx_activity where `code`='hxwgcf'
		)
	)
  </select>
  
