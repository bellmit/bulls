  <select id="queryShoppingCartList" parameterType="map" resultType="com.goochou.p2b.model.vo.ShoppingCartVO">
    SELECT
		a.id,
		a.goods_id,
		a.user_id,
		a.goods_count,
        a.is_selected,
		a.create_date,
		a.update_date,
		b.category_id,
		b.brand_id,
		b.goods_name,
		b.goods_no,
        b.stock_unit,
		CASE
			WHEN u.level = 1 THEN b.member_saling_price
			ELSE b.saling_price END as saling_price,
		b.stock,
        up.path
	  FROM
		t_goods_shopping_cart a
		INNER JOIN t_goods b ON b.id = a.`goods_id`
        LEFT JOIN (
          SELECT
            max( pic.id ),
            pic.goods_id AS goods_id,
            pic.upload_id AS upload_id
          FROM
            t_goods_picture pic
          WHERE
            pic.STATUS = 0 AND pic.type = 14 group by pic.goods_id
        ) p ON p.goods_id = b.id
        LEFT JOIN upload up ON up.id = p.upload_id  AND up.STATUS = 0
        INNER JOIN USER u ON u.id = a.user_id
      where true
	    <if test="userId != null">
	      and a.user_id = #{userId}
	    </if>
	    <if test="ids != null and ids != ''">
	      and a.id in (${ids})
	    </if>
	    order by a.create_date desc
	    <if test="start != null and end != null">
	      limit #{start},#{end}
	    </if>
  </select>


  <select id="queryShoppingCartCount" parameterType="map" resultType="int">
    SELECT
		count(1)
	FROM
		t_goods_shopping_cart a
		INNER JOIN t_goods b ON b.id = a.`goods_id`
		LEFT JOIN (
			SELECT
				max( pic.id ),
				pic.goods_id AS goods_id,
				pic.upload_id AS upload_id
			FROM
				t_goods_picture pic
			WHERE
				pic.STATUS = 0
				AND pic.type = 14  GROUP BY pic.goods_id
			) p ON p.goods_id = b.id
		LEFT JOIN upload up ON up.id = p.upload_id  AND up.STATUS = 0
		where true
	    <if test="userId != null">
	      and  a.user_id = #{userId}
	    </if>
	    <if test="ids != null and ids != ''">
	      and a.id in (${ids})
	    </if>
  </select>

