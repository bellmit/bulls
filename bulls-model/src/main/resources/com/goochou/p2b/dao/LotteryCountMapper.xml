            u.id,
            u.true_name,
            u.phone,
            lc.sys_count,
            lc.ex_count,
            lc.sys_time,
            lc.temp,
            (
                CASE
                WHEN date_format(lc.sys_time, '%Y-%m-%d') = date_format(NOW(), '%Y-%m-%d')
                    THEN
                        '今日已赠送'
                ELSE
                    '今日未赠送'
                END
            ) type
        FROM
