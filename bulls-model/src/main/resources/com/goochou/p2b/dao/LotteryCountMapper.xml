    <select id="selectRechargeWithdraw" parameterType="map" resultType="map">
        SELECT (IFNULL(a1.rs, 0) - IFNULL(a2.ws, 0)) total
        FROM
            (
                SELECT sum(r.amount) rs
                FROM
                    recharge r
                WHERE
                    r.user_id = #{userId}
                    AND r.STATUS = 0
                    AND date_format(r.time, '%y-%m-%d') BETWEEN date_format(#{startTime}, '%y-%m-%d') AND date_add(
                            #{endTime}, INTERVAL 1 DAY)
            ) a1,
            (
                SELECT IFNULL(sum(w.amount), 0) ws
                FROM
                    withdraw w
                WHERE
                    w.user_id = #{userId}
                    AND (w.STATUS = 1 OR w.STATUS = 4)
                    AND
                    date_format(w.create_time, '%y-%m-%d') BETWEEN date_format(#{startTime}, '%y-%m-%d') AND date_add(
                            #{endTime}, INTERVAL 1 DAY)
            ) a2
    </select>

